<% layout('/layouts/boilerplate') -%>

<div  class="row mt-3">
    <div class="col-8 offset-3" style="background-color: bisque;">
    <form action="/signup" method="post" class="needs-validation" novalidate>
        <h2>SignUp</h2>
        <input type="text" class="form-control" name="username" placeholder="enter username" required><br>
        <input type="email" class="form-control" name="email" placeholder="enter your email" required><br>
        <input type="password" class="form-control" name="password" placeholder="set password" required><br>
        <button class="btn btn-success">submit</button>
        </form>
    </div>
</div>